# Database Configuration
# PostgreSQL connection string for async SQLAlchemy
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/content_aggregator

# Redis Configuration
# Used for Dramatiq message broker and task queue
REDIS_HOST=localhost
REDIS_PORT=6379

#Redis Configuration
#Used for caching purposes
REDIS_CACHE_HOST=localhost
REDIS_CACHE_PORT=6380

# Application Settings
APP_NAME=Content Aggregator API
APP_VERSION=2.0.0
DEBUG=False

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Scheduler Configuration
# Interval in minutes for periodic content refresh
REFRESH_INTERVAL_MINUTES=15

# CORS Configuration
# Comma-separated list of allowed origins, or use "*" for all
CORS_ORIGINS=*
